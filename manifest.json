{
    "manifest_version": 3,
    "name": "BookMyShow Seat Preview",
    "version": "1.2",
    "description": "Shows available/total seats on hover.",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        },
        "default_title": "BookMyShow Seat Preview"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.bookmyshow.com/*"
            ],
            "js": [
                "seat_preview.js"
            ],
            "css": [
                "styles.css"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected_spy.js"
            ],
            "matches": [
                "*://*.bookmyshow.com/*"
            ]
        }
    ]
}